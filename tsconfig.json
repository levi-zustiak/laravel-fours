{
    "compilerOptions": {
        "baseUrl": "resources/ts",
        "paths": {
            "@*": [
                "./*"
            ]
        },
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "module": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "vite/client"
        ]
    },
    "include": [
        "resources/ts/**/*"
    ],
    "exlude": [
        "node_modules",
        "public",
        "dist"
    ]
}
